@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div id="shape-input" class="my-4 p-3 border border-2 rounded">
    <h4 class="text-center">Add an image!</h4>
    <input id="imgSrc" class="form-control" type="file">
    <div class="d-flex justify-content-center mt-3">
        <button onclick="selectImage();" class="btn btn-lg btn-primary">Add</button>
    </div>
</div>

<div class="main d-flex justify-content-between px-5">
    <div id="svgContainer" class="canvas border border-2 rounded">
        <object id="svgdoc" data="~/canvas.svg" width="600" height="600"> </object>
    </div>
    <div class="toolbox border border-2 rounded bg-light">
        <div class="row justify-content-center">
            <div class="col-10 pb-2 pt-4">
                <label for="device" class="form-label fw-bold">Select Device:</label>
                <select id="device" onchange="selectTemplate(this.value);" class="form-select">
                    <option selected value="0">Apple iPhone 12</option>
                    <option value="1">Samsung Galaxy S21 Ultra</option>
                    <option value="2">Samsung Galaxy Note 20 Ultra</option>
                    <option value="3">Nintendo Switch</option>
                </select>
            </div>

            <div class="col-10 pb-2">
                <label for="deviceColor" class="form-label fw-bold">Device Color</label>
                <input onchange="setColor(this.value);" type="color" class="form-control form-control-color"
                    id="deviceColor" value="#563d7c" title="Choose your color">
            </div>
            <div class="col-10 pb-2">
                <label for="rotateRange" class="form-label fw-bold">Rotate</label>
                <input id="rotateInput" oninput="rotateHandle(this.value);" id="rotateRange" type="range"
                    class="form-range" min="0" max="360" value="0">
            </div>
            <div class="col-10 pb-2">
                <label for="scaleRange" class="form-label fw-bold">Scale</label>
                <input id="scaleInput" oninput="scaleHandle(this.value);" id="scaleRange" type="range"
                    class="form-range" min="1" max="4" step="0.1" value="0">
            </div>
            <div class="col-10 pb-2">
                <label class="form-label fw-bold">Add a text/style/color:</label>
                <div class="input-group">
                    <input type="text" id="textInput" class="form-control" placeholder="Add a text">
                    <button onclick="addText()" class="btn btn-warning" type="button">Add</button>
                </div>
                <div class="input-group mt-2">
                    <div class="row">
                        <div class="col-3">
                            <input id="fontColor" type="color" class="form-control form-control-color" id="deviceColor"
                                value="#000000" title="Choose your color">
                        </div>
                        <div class="col-9">
                            <select id="font" class="form-select">
                            </select>
                        </div>
                    </div>

                </div>

            </div>
            <div class="col-10 pb-2">
                <label class="form-label fw-bold">Save your work:</label>
                <div class="input-group">
                    <input type="text" id="nameInput" class="form-control" placeholder="Name of your work">
                    <button onclick="sendSvgImage()" class="btn btn-success" type="button">Save</button>
                </div>
            </div>
            <div class="col-10 pb-2">
                <button onclick="exportSvg()" class="btn btn-danger mt-2">Export SVG</button>
            </div>
        </div>
    </div>
</div>
<div id="saved-images" class="my-4 p-3 border border-2 rounded">
    <h4 class="text-center">Saved Images</h4>
    <div class="row mt-3">
    </div>
</div>

<script src="~/js/app.js"></script>